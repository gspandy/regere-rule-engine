			<!--<param name="ConversionPattern" value="%d{DATE} %-5p - [%c{1}][%t] [%x] %m%n" />-->
		<!--</layout>-->
	<!--</appender>-->

	<category name="dev" additivity="false">
		<priority value="debug" />
		<appender-ref ref="info" />
		<appender-ref ref="console" />
	</category>
	<root>
		<priority value="debug" />
		<appender-ref ref="info" />
		<appender-ref ref="console" />
	</root>
</log4j:configuration>
